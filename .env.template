# Microsoft Azure AD / App Registration
# AZ_TENANT_ID Options:
#   - "common" = Multi-tenant (allows ANY Microsoft account - Outlook, Hotmail, Office 365, etc.)
#   - "organizations" = Multi-tenant (allows only organizational accounts, no personal accounts)
#   - "consumers" = Only personal Microsoft accounts (Outlook, Hotmail, etc.)
#   - "your-tenant-id" = Single-tenant (only users from your specific Azure AD tenant)
#
# Recommended: Use "common" for maximum flexibility
AZ_TENANT_ID=
AZ_CLIENT_ID=
AZ_CLIENT_SECRET=
AZ_USER_EMAIL=your-email@domain.com   # only used in application mode

# Epicor ERP API Configuration
EPICOR_BASE_URL=
EPICOR_API_KEY=
EPICOR_BEARER_TOKEN=
EPICOR_COMPANY_ID=
EPICOR_DEFAULT_PRICE_LIST=

# Epicor OAuth Configuration (for automatic token refresh)
# REQUIRED: All values must be set - no defaults are used
EPICOR_TOKEN_URL=https://login.epicor.com/connect/token
EPICOR_CLIENT_ID=
EPICOR_CLIENT_SECRET=
EPICOR_USERNAME=
EPICOR_PASSWORD=
EPICOR_AUTO_TOKEN=false

# Margin Thresholds for Risk Classification (percentages)
MARGIN_THRESHOLD_CRITICAL=10.0
MARGIN_THRESHOLD_HIGH=15.0
MARGIN_THRESHOLD_MEDIUM=20.0

# Price Change Confidence Threshold (0.0-1.0)
PRICE_CHANGE_CONFIDENCE_THRESHOLD=0.75

# Authentication Mode: delegated (recommended) | application
GRAPH_MODE=

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_API_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT_NAME=
AZURE_OPENAI_API_VERSION=

# Session security - REQUIRED (generate with: python -c 'import secrets; print(secrets.token_hex(32))')
# Do NOT leave empty - sessions will fail without this
SESSION_SECRET=

# Vendor Verification Settings
# Enable vendor verification to prevent AI token waste on random emails
VENDOR_VERIFICATION_ENABLED=true

# Vendor cache time-to-live in hours (default: 24)
VENDOR_CACHE_TTL_HOURS=24

# Enable domain-level matching (e.g., any email from @verified-domain.com)
# If false, only exact email matches will be verified
VENDOR_DOMAIN_MATCHING_ENABLED=true

# CORS Configuration (comma-separated origins) - REQUIRED
# IMPORTANT: For production, replace with your actual frontend domain(s)
# Example production: CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ALLOWED_ORIGINS=

# PostgreSQL Database Configuration - DATABASE_URL is REQUIRED
# IMPORTANT: For production, use your actual database host (not localhost)
# Example production: DATABASE_URL=postgresql+asyncpg://user:password@db-host:5432/dbname
DATABASE_URL=
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_POOL_SIZE=
DB_MAX_OVERFLOW=
DB_ECHO=false

# Server Configuration
# HOST: Bind address (default: 0.0.0.0 for containers)
HOST=0.0.0.0
# PORT: Server port (default: 8000)
PORT=8000
# RELOAD: Enable hot reload - set to "true" only in development
RELOAD=false
